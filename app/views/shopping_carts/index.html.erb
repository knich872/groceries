<h1 class="my-4">Here are the shopping carts</h1>
<%= form_with url: shopping_carts_path, method: :get, class: "d-flex my-2" do %>
  <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for a shopping cart"
    %>
  <%= submit_tag "Find", name: "", class: "btn" %>
<% end %>
<div class="row justify-content-between py-4">
  <% @shopping_carts.each do |shopping_cart| %>
    <%= render shopping_cart %>
  <% end %>
</div>
