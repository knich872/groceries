<h1>I want to add a new item to this shopping cart</h1>
<%= simple_form_for [@item] do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, collection: Item.categories.keys %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :shopping_carts, collection: @shopping_carts, as: :select %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-food" %>
  </div>
<% end %>
