<h1>Welcome to GrocerEase!</h1>
<% if user_signed_in? %>
  <div class="row justify-content-between my-4">
    <div class="card text-center card-solid" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">New</h5>
        <i class="fa-solid fa-cart-plus fa-4x"></i>
        <p class="card-text">Create a new shopping cart.</p>
      </div>
      <div class="align-items-center">
        <%= link_to "GO", new_shopping_cart_path, class: "btn btn-circle" %>
      </div>
    </div>
    <div class="card text-center card-solid" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Join</h5>
        <i class="fa-solid fa-cart-arrow-down fa-4x py-2"></i>
        <p class="card-text">Become a member of an existing shopping cart.</p>
      </div>
      <div class="align-items-center">
        <%= link_to "GO", shopping_carts_path, class: "btn btn-circle" %>
      </div>
    </div>
    <% if current_user.shopping_cart_ids.empty? %>
    <div class="card text-center card-dashed" style="width: 18rem;">
      <div class="card-body text-muted">
        <h5 class="card-title">View</h5>
        <i class="fa-solid fa-cart-shopping fa-4x py-2"></i>
        <p class="card-text">See all your shopping carts.</p>
      </div>
      <div class="align-items-center">
        <%= link_to "GO", root_path, class: "btn btn-dashed" %>
      </div>
    </div>
    <% else %>
      <div class="card text-center card-solid" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">View</h5>
          <i class="fa-solid fa-cart-shopping fa-4x py-2"></i>
          <p class="card-text">See all your shopping carts.</p>
        </div>
        <div class="align-items-center">
          <%= link_to "GO", shopping_carts_path(filter: current_user.id), class: "btn btn-circle" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
